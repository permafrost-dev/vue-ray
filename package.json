{
  "name": "vue-ray",
  "version": "1.1.0",
  "description": "Debug Vue code with Ray to fix problems faster",
  "license": "MIT",
  "author": "Patrick Organ <patrick@permafrost.dev>",
  "homepage": "https://github.com/permafrost-dev/vue-ray",
  "repository": {
    "type": "git",
    "url": "https://github.com/permafrost-dev/vue-ray.git"
  },
  "bugs": {
    "url": "https://github.com/permafrost-dev/vue-ray/issues"
  },
  "main": "./dist/index-vue3.mjs",
  "exports": {
    ".": {
      "import": "./dist/index-vue3.mjs",
      "require": "./dist/index-vue3.cjs"
    },
    "./vue2": {
      "import": "./dist/index-vue2.mjs",
      "require": "./dist/index-vue2.cjs"
    }
  },
  "scripts": {
    "test": "./node_modules/.bin/jest tests --verbose",
    "test:coverage": "./node_modules/.bin/jest tests --coverage",
    "fmt": "./node_modules/.bin/prettier --config .prettierrc --write $(find src/ tests/ -printf '%p ' -type f -regex '.*\\.([tj]s|vue|json)$')",
    "lint": "./node_modules/.bin/eslint --ext ts,js src/",
    "lint:fix": "./node_modules/.bin/eslint --ext ts,js --fix src/",
    "fix": "npm run fmt && npm run lint:fix",
    "build:vue2": "rollup --config rollup.vue2-config.js",
    "build:vue3": "rollup --config rollup.vue3-config.js",
    "build:all": "npm run build:vue2 && npm run build:vue3",
    "preversion": "npm run test",
    "postversion": "npm run build:all"
  },
  "keywords": [
    "vue",
    "ray",
    "debug",
    "javascript",
    "typescript",
    "permafrost"
  ],
  "devDependencies": {
    "@rollup/plugin-commonjs": "^17.1.0",
    "@rollup/plugin-json": "^4.1.0",
    "@rollup/plugin-node-resolve": "^11.1.1",
    "@rollup/plugin-typescript": "^8.1.1",
    "@types/jest": "^26.0.20",
    "@types/node": "^14.14.25",
    "@typescript-eslint/eslint-plugin": "^4.15.0",
    "@typescript-eslint/parser": "^4.15.0",
    "eslint": "^7.19.0",
    "eslint-config-prettier": "^7.2.0",
    "eslint-plugin-prettier": "^3.3.1",
    "jest": "^26.6.3",
    "prettier": "^2.2.1",
    "rollup": "^2.38.5",
    "rollup-plugin-terser": "^7.0.2",
    "ts-jest": "^26.5.0",
    "ts-mixer": "^5.4.0",
    "typescript": "^4.1.3"
  },
  "dependencies": {
    "node-ray": "^1.4.0"
  }
}
